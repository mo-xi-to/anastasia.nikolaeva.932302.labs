@model lab13.Models.QuizModel
@using lab13.Services
@inject IQuizService QuizService
@{
    string action = ViewContext.RouteData.Values["Action"].ToString();
    ViewData["Title"] = action;
    var quizQuestion = QuizService.getCurrentQuestion(Model.quiz);
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm(action, "Home", FormMethod.Post))
{
    <div class="mt-3 mb-2">
        <div class="font-weight-bold">
            @quizQuestion.firstNumber @quizQuestion.operation @quizQuestion.secondNumber =
        </div>
    </div>

    <div class="form-group">
        <input type="number" name="answer" class="form-control form-control-sm" style="width: 250px;" />
        
        @Html.HiddenFor(model => model.quiz)
    </div>

    <div class="form-group mt-3">
        <button type="submit" name="action" value="next" class="btn btn-sm btn-outline-secondary mr-2">Next</button>
        <button type="submit" name="action" value="finish" class="btn btn-sm btn-primary">Finish</button>
    </div>
}